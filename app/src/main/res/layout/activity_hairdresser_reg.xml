<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.HairdresserRegActivity">


    <ScrollView
        android:id="@+id/scrollViewHd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hdRegText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="15dp"
                android:text="KUAFÖR KAYIT EKRANI"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/hdNameText"
                android:layout_width="303dp"
                android:layout_height="58dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:ems="10"
                android:hint="Kuaförün İsmini Giriniz"
                android:inputType="textPersonName"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/hdTypeText"
                android:layout_width="305dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:ems="10"
                android:hint="Tip Giriniz (Kadın kuaförü/Erkek kuaförü)"
                android:inputType="textPersonName"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/hdEmailText"
                android:layout_width="305dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:ems="10"
                android:hint="E-Posta Giriniz"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/hdPassText"
                android:layout_width="299dp"
                android:layout_height="59dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:ems="10"
                android:hint="Şifre Giriniz"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/hdWkText"
                android:layout_width="301dp"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:ems="10"
                android:hint="Çalıştığı Günler ve Saat Aralığı"
                android:inputType="textMultiLine" />

            <EditText
                android:id="@+id/hdCityText"
                android:layout_width="301dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:ems="10"
                android:hint="Şehir Yazınız"
                android:inputType="textCapCharacters" />

            <EditText
                android:id="@+id/hdDistrictText"
                android:layout_width="301dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:ems="10"
                android:hint="İlçe Yazınız"
                android:inputType="textCapCharacters" />

            <EditText
                android:id="@+id/hdAddressText"
                android:layout_width="303dp"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Adres Giriniz"
                android:inputType="textMultiLine" />

            <EditText
                android:id="@+id/hdNumberText"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="Telefon numarası giriniz"
                android:inputType="number"
                android:maxLength="11"
                android:textSize="15dp" />

            <Button
                android:id="@+id/hdRegBtn"
                android:layout_width="120dp"
                android:layout_height="62dp"
                android:layout_gravity="center"
                android:onClick="hairdresserReg"
                android:text="Kayıt Ol" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>