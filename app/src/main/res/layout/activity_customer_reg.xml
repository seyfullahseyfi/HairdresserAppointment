<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CustomerRegActivity">

    <ScrollView
        android:id="@+id/scrollViewCust"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/custRegText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="15dp"
                android:text="MÜŞTERİ KAYIT EKRANI"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/custNameText"
                android:layout_width="300dp"
                android:layout_height="63dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:ems="10"
                android:hint="Ad-Soyad Giriniz"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/custEmailText"
                android:layout_width="300dp"
                android:layout_height="61dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:ems="10"
                android:hint="E-Posta Giriniz"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/custPassText"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:ems="10"
                android:hint="Şifre Giriniz"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/custCityText"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:ems="10"
                android:hint="Şehir Yazınız"
                android:inputType="textCapCharacters" />

            <EditText
                android:id="@+id/custDistrictText"
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:ems="10"
                android:hint="İlçe Yazınız"
                android:inputType="textCapCharacters" />

            <EditText
                android:id="@+id/custNumberText"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:ems="10"
                android:hint="Telefon numarası giriniz"
                android:inputType="number"
                android:maxLength="11"
                android:textSize="15dp" />

            <Button
                android:id="@+id/custRegBtn"
                android:layout_width="120dp"
                android:layout_height="62dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:onClick="customerReg"
                android:text="Kayıt Ol" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>